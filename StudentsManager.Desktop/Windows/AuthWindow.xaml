<Window x:Class="StudentsManager.Desktop.Windows.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:c="clr-namespace:StudentsManager.Desktop.Components"

        Title="AuthWindow" 
        
        Height="450" Width="800"
        
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <ResourceDictionary Source="../Styles.xaml"/>
    </Window.Resources>
    
    <StackPanel Orientation="Vertical">
        <TextBlock Text="Авторизация"/>
        
        <c:InputTextComponent x:Name="Input_Login"
                              LabelContent="Логин"/>
        <c:InputPasswordComponent x:Name="Input_Password"
                                  LabelContent="Пароль"/>
        
        <StackPanel Orientation="Horizontal">
            <Button x:Name="Button_Auth" 
                    Content="Войти"
                    Template="{StaticResource ResourceKey=Template_Button_Radius_5}"
                    Click="Button_Auth_OnClick">
                <Button.Resources>
                    <Style TargetType="{x:Type TypeName=Button}"
                           BasedOn="{StaticResource ResourceKey=Style_Button_Auth}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ElementName=Input_Login, Path=InputText}" 
                                         Value="">
                                <Setter Property="IsEnabled" Value="False"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ElementName=Input_Password, Path=InputPassword}" 
                                         Value="">
                                <Setter Property="IsEnabled" Value="False"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Resources>
            </Button>

            <Button x:Name="Button_Cancel"
                    Content="Отмена"
                    Template="{StaticResource ResourceKey=Template_Button_Radius_5}"
                    Style="{StaticResource ResourceKey=Style_Button_Cancel}"
                    Click="Button_Cancel_OnClick"/>
        </StackPanel>
    </StackPanel>
</Window>
