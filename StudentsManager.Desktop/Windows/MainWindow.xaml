<Window x:Class="StudentsManager.Desktop.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:c="clr-namespace:StudentsManager.Desktop.Components"
        xmlns:m="clr-namespace:StudentsManager.Desktop.Model"

        Title="MainWindow" 
        
        Height="450" Width="800"
        
        Icon="">
    <Window.Background>
        <ImageBrush ImageSource="pack://application:,,,/Assert/back.jpg"/>
    </Window.Background>
    
    <Window.Resources>
        <DataTemplate x:Key="StudentTemplate" 
                      DataType="{x:Type TypeName=m:Student}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Path=Id}"/>
                <TextBlock Text="{Binding Path=FullName}"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        
        <ListBox x:Name="ListOfStudents"
                 ItemTemplate="{StaticResource ResourceKey=StudentTemplate}"
                 SelectionMode="Single"
                 SelectionChanged="ListOfStudents_OnSelectionChanged"
                 Grid.Column="0"/>
        
        <StackPanel Orientation="Vertical"
                    Grid.Column="1">
            <c:InputTextComponent x:Name="InputId"
                              LabelContent="ID"/>
            <c:InputTextComponent x:Name="InputLastName"
                              LabelContent="Фамилия"/>
            <c:InputTextComponent x:Name="InputFirstName"
                              LabelContent="Имя"/>
            <Image x:Name="Photo" Width="250"/>
            
            <StackPanel Orientation="Horizontal">
                <Button Click="ButtonSave_OnClick">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="pack://application:,,,/Assert/save.png" Width="32"/>
                        <TextBlock Text="Сохранить"/>
                    </StackPanel>
                </Button>
                <Button>
                    <StackPanel Orientation="Horizontal">
                        <Viewbox Width="20" Height="20">
                            <Path Stroke="Black" Fill="Red">
                                <Path.Data>
                                    <GeometryGroup>
                                        <PathGeometry Figures="M28,40H11.8c-3.3,0-5.9-2.7-5.9-5.9V16c0-0.6,0.4-1,1-1s1,0.4,1,1v18.1c0,2.2,1.8,3.9,3.9,3.9H28c2.2,0,3.9-1.8,3.9-3.9V16   c0-0.6,0.4-1,1-1s1,0.4,1,1v18.1C33.9,37.3,31.2,40,28,40z" />
                                        <PathGeometry Figures="M33.3,4.9h-7.6C25.2,2.1,22.8,0,19.9,0s-5.3,2.1-5.8,4.9H6.5c-2.3,0-4.1,1.8-4.1,4.1S4.2,13,6.5,13h26.9   c2.3,0,4.1-1.8,4.1-4.1S35.6,4.9,33.3,4.9z M19.9,2c1.8,0,3.3,1.2,3.7,2.9h-7.5C16.6,3.2,18.1,2,19.9,2z M33.3,11H6.5   c-1.1,0-2.1-0.9-2.1-2.1c0-1.1,0.9-2.1,2.1-2.1h26.9c1.1,0,2.1,0.9,2.1,2.1C35.4,10.1,34.5,11,33.3,11z" />
                                        <PathGeometry Figures="M12.9,35.1c-0.6,0-1-0.4-1-1V17.4c0-0.6,0.4-1,1-1s1,0.4,1,1v16.7C13.9,34.6,13.4,35.1,12.9,35.1z" />
                                        <PathGeometry Figures="M26.9,35.1c-0.6,0-1-0.4-1-1V17.4c0-0.6,0.4-1,1-1s1,0.4,1,1v16.7C27.9,34.6,27.4,35.1,26.9,35.1z" />
                                        <PathGeometry Figures="M19.9,35.1c-0.6,0-1-0.4-1-1V17.4c0-0.6,0.4-1,1-1s1,0.4,1,1v16.7C20.9,34.6,20.4,35.1,19.9,35.1z" />
                                    </GeometryGroup>
                                </Path.Data>
                            </Path>
                        </Viewbox>
                        <TextBlock Text="Удалить"/>
                    </StackPanel>
                </Button>
                <Button Content="Очистить"
                        Click="ButtonClear_OnClick"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
