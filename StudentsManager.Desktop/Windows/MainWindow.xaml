<Window x:Class="StudentsManager.Desktop.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:c="clr-namespace:StudentsManager.Desktop.Components"

        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        
        <ListBox x:Name="ListOfStudents"
                 Grid.Column="0"/>
        
        <StackPanel Orientation="Vertical"
                    Grid.Column="1">
            <c:InputTextComponent x:Name="InputId"
                              LabelContent="ID"/>
            <c:InputTextComponent x:Name="InputLastName"
                              LabelContent="Фамилия"/>
            <c:InputTextComponent x:Name="InputFirstName"
                              LabelContent="Имя"/>
            
            <StackPanel Orientation="Horizontal">
                <Button Content="Сохранить"/>
                <Button Content="Удалить"/>
                <Button Content="Очистить"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
