<c:InputComponent x:Class="StudentsManager.Desktop.Components.InputPasswordComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c="clr-namespace:StudentsManager.Desktop.Components">
    <c:InputComponent.Resources>
        <ResourceDictionary Source="../Styles.xaml"/>
    </c:InputComponent.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="Label_Input"
               Target="Input"
               Style="{StaticResource ResourceKey=Style_Label}"
               Grid.Column="0">
            <Label.Content>
                <Binding Path="LabelContent" Mode="OneWay">
                    <Binding.RelativeSource>
                        <RelativeSource Mode="FindAncestor" 
                                        AncestorType="{x:Type c:InputComponent}"/>
                    </Binding.RelativeSource>
                </Binding>
            </Label.Content>
        </Label>
        <TextBox x:Name="Input"
                 Style="{StaticResource ResourceKey=Style_Input}"
                 Grid.Column="1">
            <TextBox.Text>
                <Binding Path="InputPassword" 
                         Mode="TwoWay" 
                         UpdateSourceTrigger="PropertyChanged">
                    <Binding.RelativeSource>
                        <RelativeSource Mode="FindAncestor" AncestorType="{x:Type c:InputComponent}"/>
                    </Binding.RelativeSource>
                </Binding>
            </TextBox.Text>
        </TextBox>
    </Grid>
</c:InputComponent>
