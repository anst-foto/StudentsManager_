<Window x:Class="StudentsManager.Desktop.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:StudentsManager.Desktop"
        
        Title="AuthWindow" 
        
        Height="450" Width="800"
        
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <ResourceDictionary Source="Styles.xaml"/>
    </Window.Resources>
    
    <StackPanel Orientation="Vertical">
        <TextBlock Text="Авторизация"/>
        
        <local:InputComponent x:Name="Input_Login"
                              LabelText="Логин"/>
        <StackPanel Orientation="Horizontal">
            <Label Content="Пароль"
                   Target="Input_Password"
                   Style="{StaticResource ResourceKey=Style_Label}"/>
            <PasswordBox x:Name="Input_Password"
                         Style="{StaticResource ResourceKey=Style_Input_Password}"/>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal">
            <Button x:Name="Button_Auth" 
                    Content="Войти"
                    Template="{StaticResource ResourceKey=Template_Button_Radius_5}"
                    Click="Button_Auth_OnClick">
                <Button.Resources>
                    <Style TargetType="{x:Type TypeName=Button}"
                           BasedOn="{StaticResource ResourceKey=Style_Button_Auth}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ElementName=Input_Login, Path=Text}" Value="">
                                <Setter Property="IsEnabled" Value="False"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Resources>
            </Button>

            <Button x:Name="Button_Cancel"
                    Content="Отмена"
                    Template="{StaticResource ResourceKey=Template_Button_Radius_5}"
                    Style="{StaticResource ResourceKey=Style_Button_Cancel}"
                    Click="Button_Cancel_OnClick"/>
        </StackPanel>
    </StackPanel>
</Window>
