<Window x:Class="StudentsManager.Desktop.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        
        Title="AuthWindow" 
        
        Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary Source="Styles.xaml"/>
    </Window.Resources>
    
    <StackPanel Orientation="Vertical">
        <TextBlock Text="Авторизация"/>
        
        <StackPanel Orientation="Horizontal">
            <Label Content="Логин"
                   Target="Input_Login"/>
            <TextBox x:Name="Input_Login"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Пароль"
                   Target="Input_Password"/>
            <PasswordBox x:Name="Input_Password"/>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal">
            <Button x:Name="Button_Auth" 
                    Content="Войти"
                    Template="{StaticResource ResourceKey=Template_Button_Radius_5}"
                    Style="{StaticResource ResourceKey=Style_Button_Auth}"
                    Click="Button_Auth_OnClick"/>

            <Button x:Name="Button_Cancel"
                    Content="Отмена"
                    Template="{StaticResource ResourceKey=Template_Button_Radius_50}"
                    Style="{StaticResource ResourceKey=Style_Button_Cancel}"
                    Click="Button_Cancel_OnClick"/>
        </StackPanel>
    </StackPanel>
</Window>
